<form method="POST" action="/poses">

  <ul>

    <li>
      <label for="name"> Pose Name: </label>
      <input type="text" name="name" id="name"/>
    </li>

    <li>
      <label for="image"> Image (enter URL): </label>
      <input type="text" name="image" id="image"/>
    </li>

    <li>
      <label for="hold_time"> Hold Time (in seconds): </label>
      <select id="hold_time" name="hold_time">
        <option value=10> 10 </option>
        <option value=20> 20 </option>
        <option value=30> 30 </option>
        <option value=40> 40 </option>
        <option value=50> 50 </option>
        <option value=60> 60 </option>
      </select>
    </li>

    <li>
      <label for="effort_level"> Effort Level: </label>
      <select id="effort_level" name="effort_level">
        <option value=1> 1 </option>
        <option value=2> 2 </option>
        <option value=3> 3 </option>
        <option value=4> 4 </option>
        <option value=5> 5 </option>
      </select>
    </li>

    <li>
      <input type="submit" value="Save"/>
    </li>

  </ul>
</form>