<form method="POST" action="/sequences">

  <p>
    <label for="name"> Sequence Name: </label>
    <input type="text" name="name" id="name"/>
  </p>

  <p>
    Select poses to add to the sequence:
  </p>

    <% for pose in @poses %>
      <p>

      <input type="checkbox" name="pose_id<%= pose.id %>" id="pose_id<%= pose.id %>" value="<%= pose.id %>" />
      <label for="pose_id<%= pose.id %>">
      <%= pose.name %>
      </label>

      </p>
    <% end %>

  <p>
    <input type="submit" value="Save"/>
  </p>

</form>