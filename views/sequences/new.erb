<form method="POST" action="/sequences">

  <ul>

    <li>
      <label for="name"> Sequence Name: </label>
      <input type="text" name="name" id="name"/>
    </li>

    <li> Select a pose:
      <label>
        <select name="pose_id">
          <% for pose in @poses %>
          <option value="<%= pose.id %>"><%= pose.name %></option>
          <% end %>
      </label>
    </li>

    <li>
      <input type="submit" value="Save"/>
    </li>

  </ul>
</form>